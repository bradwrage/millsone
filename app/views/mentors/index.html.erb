
<div class="page-header">
<h1>Mentors</h1>
</div>

<% @mentors.each do |mentor| %>
<div class="mentor">
  <strong> <%= mentor.name %> </strong>
  <p><%= mentor.content  %></p>

  <div class="meta">
    <%= link_to time_ago_in_words(mentor.created_at) + " ago", mentor %>
    <span class="admin">
      | <%= link_to "Edit", edit_mentor_path(mentor) %> |
      <%= link_to "Delete", mentor, method: :Delete, data: {confirm: "Are you sure you want to delete this status?"} %>
    </span>
  </div>
</div>

<% end %>


